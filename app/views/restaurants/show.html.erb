<h1><%= @restaurant.name %></h1>

<p><strong>Address:</strong> <%= @restaurant.address %></p>
<p><strong>Phone Number:</strong> <%= @restaurant.phone_number %></p>
<p><strong>Category:</strong> <%= @restaurant.category %></p>

<hr>

<h2>Reviews</h2>

<% if @restaurant.reviews.any? %>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li>
        ⭐ <strong><%= review.rating %>/5</strong><br>
        <%= review.content %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>This restaurant has no reviews yet.</p>
<% end %>

<%= link_to "Back to All Restaurants", restaurants_path, class: "btn btn-secondary mt-2" %>
